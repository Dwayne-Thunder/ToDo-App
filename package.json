{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "Полнофункциональное приложение Todo List с React, Node.js, SQLite и JWT",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd apps/backend && npm start",
    "start:frontend": "cd apps/frontend && npm start",
    "build": "npm run build:frontend",
    "build:frontend": "cd apps/frontend && npm run build",
    "install:all": "npm install && cd apps/backend && npm install && cd ../frontend && npm install",
    "clean": "rimraf node_modules apps/*/node_modules apps/*/.next apps/*/build apps/*/dist",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd apps/frontend && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "todo",
    "react",
    "nextjs",
    "nodejs",
    "sqlite",
    "jwt",
    "typescript",
    "tailwind"
  ],
  "author": "Your Name",
  "license": "MIT"
}
